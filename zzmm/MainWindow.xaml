<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Height="450" Width="450" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" KeyDown="Window_KeyDown"
        Background="Gray">

    <Grid>
        <Canvas x:Name="canvas"/>
        <Label x:Name="scoreLabel" Content="Score: 0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Label x:Name="bestScoreLabel" >

        </Label>
        <Button x:Name="newGameButton" Content="New Game" Click="NewGame_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="86,10,0,0"/>
        <Button x:Name="pauseButton" Content="Pause" Click="Pause_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="382,10,0,0"/>
        <Button x:Name="exitButton" Content="Exit" Click="Exit_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="399,383,0,0" RenderTransformOrigin="0,0.022"/>
        <Button Content="View best score" Click="ViewBestScore_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="201,10,0,0"/>

    </Grid>
</Window>
